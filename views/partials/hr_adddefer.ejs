        
     
     <main class="page-content">     
        <section class="section-30 section-md-50">
          <div class="container">
             
              <div class="cell-md-8 cell-sm-10">
                  <section class="text-left">
                      <h6 class="text-bold">LEAVE DEFERMENT</h6>
                      <div class="text-subline"></div><br>
                  <form method="post" action="/hrm/postdefer" enctype="application/x-www-form-urlencoded">                         

                        <div class="data2">                            
                                                          
                                   <!-- Line 2 -->
                                <div class="range offset-top-17">                          
                                    <div class="cell-sm-12 offset-top-17 offset-sm-top-0">
                                      <div class="range">
                                        <div class="cell-sm-4">
                                            <div class="form-group">
                                              <label class="form-label form-label-outside rd-input-label" for="title">Staff Number</label>
                                              <input class="form-control form-control-has-validation form-control-last-child" id="staff_no" type="text" name="staff_no" value="<%= row.staff_no %>" data-constraints="@Required"><span class="form-validation"></span>
                                            </div>
                                        </div>                                        
                                        <div class="cell-sm-4 offset-top-17 offset-sm-top-0">
                                          <div class="form-group">
                                            <label class="form-label form-label-outside rd-input-label" for="desc">Reason</label>
                                            <input class="form-control form-control-has-validation form-control-last-child" id="reason" type="text" name="reason" value="<%= row.reason %>" data-constraints="@Required"><span class="form-validation"></span>
                                          </div>
                                        </div>
                                        <div class="cell-sm-4">
                                            <div class="form-group">
                                              <label class="form-label form-label-outside rd-input-label" for="title">Deferment Approved By</label>
                                              <input class="form-control form-control-has-validation form-control-last-child" id="approved_by" type="text" name="approved_by" value="<%= row.approved_by %>" data-constraints="@Required"><span class="form-validation"></span>
                                            </div>
                                        </div> 

                                                                                                            
                                      </div>
                                    </div>
                                  </div>

                               
                        <div class="offset-top-25">
                             <button class="btn btn-primary btn-2x" type="submit">SAVE</button>
                             <a href="javascript:history.back();" onclick="return confirm('Cancel?')" class="btn">CANCEL</a>                               
                             <input type="hidden" name="id" value="<%= row.id || 0 %>"/>                       
                        </div>
                       <hr/>
                       </form>
                    </section>
              </div>
          </div>
        </section>
        
      </main>
      