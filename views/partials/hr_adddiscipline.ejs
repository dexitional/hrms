        
     
     <main class="page-content">     
        <section class="section-30 section-md-50">
          <div class="container">
             
              <div class="cell-md-8 cell-sm-10">
                  <section class="text-left">
                  
                        <form name="" action="/hrm/postdiscipline" method="post" enctype="application/x-www-form-urlencoded">
                        <br><br><h6 class="text-bold"><%= title %> FORM </h6>
                        <div class="text-subline"></div>
                            <div class="data2">                    
                    
                          <!-- Line 1 -->
                          <div class="range offset-top-17">                          
                              <div class="cell-sm-12 offset-top-17 offset-sm-top-0">
                                <div class="range">                                       
                                  <div class="cell-sm-3">
                                      <div class="form-group">
                                        <label class="form-label form-label-outside rd-input-label" for="staff_no">Staff Number</label>
                                        <input class="form-control form-control-has-validation form-control-last-child" id="staff_no" type="text" name="staff_no" value="<%= row.staff_no %>"/>
                                      </div>
                                  </div>
                                  <div class="cell-sm-3">
                                    <div class="form-group">
                                      <label class="form-label form-label-outside rd-input-label" for="issue_date">Issued Date</label>
                                      <input class="form-control form-control-has-validation form-control-last-child" id="issue_date" type="date" name="issue_date" value="<%= row.issue_date %>"/>
                                    </div>
                                  </div>
                                  <div class="cell-sm-3">
                                    <div class="form-group">
                                      <label class="form-label form-label-outside rd-input-label" for="reason">Reason</label>
                                      <input class="form-control form-control-has-validation form-control-last-child" id="reason" type="text" name="reason" value="<%= row.reason %>"/>
                                    </div>
                                </div>
                                  <div class="cell-sm-3">
                                    <div class="form-group">
                                      <label class="form-label form-label-outside rd-input-label" for="action_type">Action Type</label>
                                      <select name="action_type" class="form-control"> 
                                        <option value="WARNINIG" <%- 'WARNINIG' == row.action_type ? 'selected="selected"': '' %>>WARNINIG</option>
                                        <option value="SUSPENSION" <%- 'SUSPENSION' == row.action_type ? 'selected="selected"': '' %>>SUSPENSION</option>
                                        <option value="INTERDICTION" <%- 'INTERDICTION' == row.action_type ? 'selected="selected"': '' %>>INTERDICTION</option>
                                        <option value="DISMISSAL" <%- 'DISMISSAL' == row.action_type ? 'selected="selected"': '' %>>DISMISSAL</option>
                                        <option value="TERMINATION" <%- 'DEAD' == row.action_type ? 'selected="selected"': '' %>>TERMINATION</option>
                                      </select>
                                    </div>
                                  </div>
                                
                                </div>
                              </div>
                            </div>
                           
                           
                            <br><div class="text-subline"></div><br>
                        
                            <div class="offset-top-25">
                                <button class="btn btn-primary btn-2x" type="submit" onclick="return confirm('Do you want to Submit?');">SAVE</button>
                                <a href="javascript:history.back();" onclick="return confirm('Cancel?')" class="btn">CANCEL</a>
                                <input name="id" type="hidden" value="<%= row.id || 0 %>" />
                            </div>
                       <hr/>

                       </form>

                    </section>
              </div>
          </div>
        </section>
        
      </main>
      