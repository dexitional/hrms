        
     
     <main class="page-content">     
        <section class="section-30 section-md-50">
          <div class="container">
             
              <div class="cell-md-8 cell-sm-10">
                  <section class="text-left">
                      <h6 class="text-bold">POSITION FORM &nbsp;&nbsp;-&nbsp;&nbsp;<em style="color:brown"></em> <%= type != undefined && type == 'exst' ? 'ADD EXISTING POSITION RECORD' : (type != undefined && type == 'new' ? 'ADD NEW POSITION RECORD' : 'UPDATE POSITION' )%></b></h6>
                      <div class="text-subline"></div><br><br>                    
                  <form name="formtransfer" method="post" action="/hrm/postposition" enctype="application/x-www-form-urlencoded">
                      <div class="range offset-top-7">                       
                        <div class="cell-sm-12 offset-top-17 offset-sm-top-0">
                          <div class="range">
                            <div class="cell-sm-4">
                              <div class="form-group">
                                <label class="form-label form-label-outside rd-input-label" for="staff_no">Staff Number</label>
                                <input class="form-control form-control-has-validation form-control-last-child" id="staff_no" type="text" name="staff_no" value="<%= data.staff_no %>" data-constraints="@Required"><span class="form-validation"></span>
                              </div>
                            </div>
                        

                            <div class="cell-sm-4 offset-top-17 offset-sm-top-0">
                              <div class="form-group">
                                <label class="form-label form-label-outside rd-input-label" for="transfer_date">Effective Appointment Start Date</label>
                                <input class="form-control" id="start_date" type="date" name="start_date" value="<%= data.start_date %>" data-constraints="@Required"><span class="form-validation"></span>
                              </div>
                            </div>

                            <div class="cell-sm-4 offset-top-17 offset-sm-top-0">
                              <div class="form-group">
                                <label class="form-label form-label-outside rd-input-label" for="transfer_date">Effective Appointment End Date</label>
                                <input class="form-control" id="end_date" type="date" name="end_date" value="<%= data.end_date %>" data-constraints="@Required"><span class="form-validation"></span>
                              </div>
                            </div>
                          </div>
                        </div>
                    </div>

                    'VC','PRO-VC','REGISTRAR','PROVOST','DIRECTOR','DEPUTY-DIRECTOR','DEAN','VICE-DEAN','COORDINATOR','HEAD'
                    <div class="range offset-top-7"> 
                        <div class="cell-sm-3">
                            <div class="form-group">
                              <label class="form-label form-label-outside rd-input-label" for="post">Assigned Position</label>
                              <select name="post" class="form-control">
                                <option value="">Select Post</option>
                                <option value="VC" <%- data.unit_id ? 'selected="selected"': '' %>>VICE CHANCELLOR</option>
                                <option value="PRO-VC" <%- data.unit_id ? 'selected="selected"': '' %>>PRO VICE CHANCELLOR</option>
                                <option value="REGISTRAR" <%- data.unit_id ? 'selected="selected"': '' %>>REGISTRAR</option>
                                <option value="PROVOST" <%- data.unit_id ? 'selected="selected"': '' %>>PROVOST</option>
                                <option value="DIRECTOR" <%- data.unit_id ? 'selected="selected"': '' %>>DIRECTOR</option>
                                <option value="DEPUTY-DIRECTOR" <%- data.unit_id ? 'selected="selected"': '' %>>DEPUTY DIRECTOR</option>
                                <option value="DEAN" <%- data.unit_id ? 'selected="selected"': '' %>>DEAN</option>
                                <option value="VICE-DEAN" <%- data.unit_id ? 'selected="selected"': '' %>>VICE DEAN</option>
                                <option value="HEAD" <%- data.unit_id ? 'selected="selected"': '' %>>HEAD</option>
                                <option value="COORDINATOR" <%- data.unit_id ? 'selected="selected"': '' %>>COORDINATOR</option>
                                <option value="OFFICER" <%- data.unit_id ? 'selected="selected"': '' %>>OFFICER</option>
                                
                              </select>
                            </div>
                        </div>  
                        <div class="cell-sm-3">
                            <div class="form-group">
                              <label class="form-label form-label-outside rd-input-label" for="unit_id">Attached Unit</label>
                              <select name="unit_id" class="form-control">
                                <option value="">Select Section/Unit</option>
                                <option value="null">NON-UNIT</option>
                                <%  units.map((unit,i) =>{ %>
                                  <option value="<%= unit.id%>" <%- unit.id == data.unit_id ? 'selected="selected"': '' %>>
                                    <%= unit.long_name %>
                                  </option>
                                  <%   }); %>
                              </select>
                            </div>
                        </div>
                        <div class="cell-sm-3">
                            <div class="form-group">
                              <label class="form-label form-label-outside rd-input-label" for="unit_domain">Position Domain <small><em>( If Any )</em></small></label>
                              <input class="form-control form-control-has-validation form-control-last-child" id="unit_domain" type="text" name="unit_domain" value="<%= data.unit_domain %>" data-constraints="@Required"><span class="form-validation"></span>
                            </div>
                        </div>   
                        <div class="cell-sm-3">
                          <div class="form-group">
                            <label class="form-label form-label-outside rd-input-label" for="access">Acess Level </label>
                            <select name="access" class="form-control">
                               <option value="">Select Level</option>
                               <option value="HEAD" <%- data.access  == 'HEAD' ? 'selected="selected"': '' %>>MAIN UNIT HEAD ACCESS</option>
                               <option value="SUBHEAD" <%- data.access == 'SUBHEAD' ? 'selected="selected"': '' %>>UNIT DOMAIN HEAD ACCESS</option>
                            </select>
                          </div>
                      </div>                 
                         
                    </div>


                      

                        

                        <br><div class="text-subline"></div><br>

                        <div class="offset-top-25">
                             <button class="btn btn-primary btn-2x" type="submit" onclick="return confirm('Do you want to Submit?');">SAVE</button>
                             <a href="javascript:history.back();" onclick="return confirm('Cancel?')" class="btn">CANCEL</a>
                             <input name="id" type="hidden" value="<%= data.id || 0 %>" />
                             <input name="type" type="hidden" value="<%= type || 'new' %>" />
                        </div>
                       <hr/>

                       </form>

                    </section>
              </div>
          </div>
        </section>
        
      </main>
      