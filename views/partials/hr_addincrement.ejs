    
     
     <main class="page-content">     
        <section class="section-30 section-md-50">
          <div class="container">
             
              <div class="cell-md-8 cell-sm-10">
                  <section class="text-left">
                      <h6 class="text-bold">SCALE INCREMENT FORM - <%= title %></h6>
                      <div class="text-subline"></div><br>
                  <form method="post" action="/hrm/postincrement" enctype="application/x-www-form-urlencoded">                         

                        <div class="data2">                                                
                                   <!-- Line 1 -->
                                <% if(row.action == 'range'){ %>
                                <div class="range offset-top-17">                          
                                    <div class="cell-sm-12 offset-top-17 offset-sm-top-0">
                                      <div class="range">
                                        <div class="cell-sm-3">
                                            <div class="form-group">
                                              <label class="form-label form-label-outside rd-input-label" for="steps">Number of Steps</label>
                                              <input class="form-control form-control-has-validation form-control-last-child" id="steps" type="text" name="steps" value="<%= row.steps %>" data-constraints="@Required"><span class="form-validation"></span>
                                            </div>
                                        </div>      
                                        <div class="cell-sm-3">
                                            <div class="form-group">
                                              <label class="form-label form-label-outside rd-input-label" for="from">From (Period)</label>
                                              <input class="form-control form-control-has-validation form-control-last-child" id="from" type="date" name="from" value="<%= row.from %>" data-constraints="@Required"><span class="form-validation"></span>
                                            </div>
                                        </div>   

                                        <div class="cell-sm-3">
                                            <div class="form-group">
                                              <label class="form-label form-label-outside rd-input-label" for="to">To (Period)</label>
                                              <input class="form-control form-control-has-validation form-control-last-child" id="to" type="date" name="to" value="<%= row.to %>" data-constraints="@Required"><span class="form-validation"></span>
                                            </div>
                                        </div>   
                                       
                                        <div class="cell-sm-3">                                          
                                          <div class="form-group">
                                              <label class="form-label form-label-outside rd-input-label" for="group">Group</label>
                                              <select name="group" class="form-control" id="group">
                                                  <option value="ALL" <%= row.group == 'ALL' ? 'selected="selected"':'' %>>ALL</option> 
                                                  <option value="SM" <%= row.group == 'SM' ? 'selected="selected"':'' %>>SENIOR MEMBER</option> 
                                                  <option value="SS" <%= row.group == 'SS' ? 'selected="selected"':'' %>>SENIOR STAFF</option> 
                                                  <option value="JS" <%= row.group == 'JS' ? 'selected="selected"':'' %>>JUNIOR STAFF</option>                                                  
                                             </select>
                                            </div>
                                        </div>   
                                      </div>
                                    </div>
                                </div>

                                <% } %>


                                <!-- Line 2 -->
                                <% if(row.action == 'job'){ %>
                                <div class="range offset-top-17">                          
                                    <div class="cell-sm-12 offset-top-17 offset-sm-top-0">
                                      <div class="range">
                                        <div class="cell-sm-6">
                                            <div class="form-group">
                                              <label class="form-label form-label-outside rd-input-label" for="steps">Number of Steps</label>
                                              <input class="form-control form-control-has-validation form-control-last-child" id="steps" type="text" name="steps" value="<%= row.steps %>" data-constraints="@Required"><span class="form-validation"></span>
                                            </div>
                                        </div>      
                                      
                                        <div class="cell-sm-6">                                          
                                          <div class="form-group">
                                              <label class="form-label form-label-outside rd-input-label" for="group">Group</label>
                                              <select name="group" class="form-control" id="group">
                                                  <option value="ALL" <%= row.group == 'ALL' ? 'selected="selected"':'' %>>ALL</option> 
                                                  <option value="SM" <%= row.group == 'SM' ? 'selected="selected"':'' %>>SENIOR MEMBER</option> 
                                                  <option value="SS" <%= row.group == 'SS' ? 'selected="selected"':'' %>>SENIOR STAFF</option> 
                                                  <option value="JS" <%= row.group == 'JS' ? 'selected="selected"':'' %>>JUNIOR STAFF</option>                                                  
                                             </select>
                                            </div>
                                        </div>   
                                      </div>
                                    </div>
                                </div>

                                 <!-- Line 3 -->
                                <div class="range offset-top-17">                          
                                    <div class="cell-sm-12 offset-top-17 offset-sm-top-0">
                                         <div class="well">
                                             <h4 >Designations<hr style="border:2px solid brown"></h4>
                                             <div class="range">
                                               <%
                                                  let sel = row.jobs != null ? row.jobs.split(',') : null;
                                                  jobs.map((job,i) =>{
                                                      let jm = row.jobs != null ? sel.filter(jb => jb == job.id) : 0;
                                                      if(jm.length > 0){
                                                      //if(row.jobs != null && row.jobs.includes(job.id)){
                                               %>
                                                  <div class="cell-sm-4">
                                                        <input type="checkbox" name="jobs" id="jobs<%= i%>" class="jobs" value="<%- job.id%>" checked/>
                                                        <label for="jobs<%= i%>" class="text-primary text-bold"><small><%- job.title%></small></label>                                                        
                                                  </div> 
                                               <%     }else{  %>
                                                  <div class="cell-sm-4">
                                                      <input type="checkbox" name="jobs" id="jobs<%= i%>" class="job" value="<%- job.id%>"/>
                                                      <label for="jobs<%= i%>" class="text-primary text-bold"><small><%- job.title%></small></label>                                                        
                                                  </div> 
                                               <%     }
                                                 });
                                               %>                                                
                                             </div>
                                         </div>
                                      
                                    </div>
                                  </div>

                        <% } %>
                        <br><div class="text-subline"></div><br>
                        <div class="offset-top-25">
                             <button class="btn btn-primary btn-2x" type="submit">SAVE</button>
                             <a href="javascript:history.back();" onclick="return confirm('Cancel?')" class="btn">CANCEL</a>                               
                             <input type="hidden" name="action" value="<%= row.action || 0 %>"/>                       
                        </div>
                       <hr/>
                       </form>
                    </section>
              </div>
          </div>
        </section>
        
      </main>
     